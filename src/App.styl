.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  font-family: Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

html, body {
  margin: 0;
  padding: 0;
  font-size: 16px;
}

.page-content {
  padding: 0 20px;
}

@media screen and (min-width: 750px) {
  .page-content {
    padding: 0 40px;
  }
}