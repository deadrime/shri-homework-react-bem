.Footer
  width 100%
  height 64px
  padding 0 1.25rem
  box-sizing border-box
  display flex
  flex-wrap wrap
  margin-top auto
  justify-content space-between
  align-items center

  &-nav
    display flex

    &-item
      text-decoration none
      font-size 12px
      color #858585
      letter-spacing 0.01px
      padding-right 10px

  &-copyright
    font-size 12px
    color #858585
    letter-spacing 0.01px

@media screen and (min-width: 750px)
  .Footer
    padding 0 2.5rem